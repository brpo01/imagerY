<section class="latest_comments_area">
     <header>
        Latest Comments
    </header>
<div>
     {{#if sidebar.latests }}
        <ul class="media-list">
            {{#each sidebar.latests}}
                <li class="media">
                    <a class="pull-left" href="/image/{{image.uniqueId}}">
                    <img class="media-object" src="/public/upload/{{image.filename}}" style="width:50px; height:50px;">
                    </a>
                    <div class="media-body">
                        {{comment}} <br/>
                        <strong class="media-heading">{{name}}</strong> <small>{{timeago image.timestamp}}</small>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <div class="col-md-12">
            <p class="text-muted">Latest Comments will show up here</p>
        </div>
    {{/if}}
</div>
</section>